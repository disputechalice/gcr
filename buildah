#!/bin/bash

container=$(buildah from docker.io/library/debian:12)

buildah config \
    --label "org.opencontainers.image.description=$DESCRIPTION" \
    $container

buildah run "$container" bash -vc "$(cat run)"

buildah commit --format docker "$container" gcr

buildah tag gcr ghcr.io/disputechalice/gcr:latest
